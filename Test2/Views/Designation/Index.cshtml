@model IEnumerable<Test2.Models.Designations>

@{
	ViewBag.Title = "Index";
}

<h2>Index of Designation</h2>

<p class="mt-1">
	@Html.ActionLink("Create New", "Create", string.Empty, new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-striped table-light text-center">
	<thead class="table-dark">
		<tr class="row">
			<th class="col">
				@Html.DisplayNameFor(model => model.Designation)
			</th>
			<th class="col">
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="row">
				<td class="col">
					@Html.DisplayFor(modelItem => item.Designation)
				</td>
				<td class="col">
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
				</td>
			</tr>
		}
	</tbody>
</table>
