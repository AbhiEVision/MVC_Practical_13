@model IEnumerable<Test2.Models.Employee>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create", string.Empty, new { @class = "btn btn-success btn-sm" })
	@Html.ActionLink("Query 1", "LinqQuery1", string.Empty, new { @class = "btn btn-success btn-sm" })
	@Html.ActionLink("Query 2", "LinqQuery2", string.Empty, new { @class = "btn btn-success btn-sm" })





</p>
<table class="table table-light text-center table-striped align-content-center ">
	<thead class="table-dark">
		<tr class="row">
			<th class="col">
				@Html.DisplayNameFor(model => model.Designations.Designation)
			</th>
			<th class="col">
				Full Name
			</th>
			<th class="col">
				@*@Html.DisplayNameFor(model => model.DOB)*@
				Date of birth
			</th>
			<th class="col">
				@Html.DisplayNameFor(model => model.MobileNo)
			</th>
			<th class="col">
				@Html.DisplayNameFor(model => model.Salary)
			</th>
			<th class="col">
				Actions
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			<tr class="row">
				<td class="col align-middle">
					@Html.DisplayFor(modelItem => item.Designations.Designation)
				</td>
				<td class="col">
					@item.FirstName @item.LastName
				</td>
				<td class="col">
					@Html.DisplayFor(modelItem => item.DOB)
				</td>
				<td class="col">
					@Html.DisplayFor(modelItem => item.MobileNo)
				</td>
				<td class="col">
					@Html.DisplayFor(modelItem => item.Salary)
				</td>
				<td class="col text-center">
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm"})
						@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm " })
						@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
				</td>
			</tr>
		}
	</tbody>
</table>
